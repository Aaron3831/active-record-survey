<h1><%= @question.prompt %></h1>

<form action="/answer/<%= @question.id %>" method="post">

  <label for="response">Add answer to question:</label>
  <input name="response" type="text">

  <button type="submit">Update</button>
</form>

<% @question.answers().each() do |answers| %>
    <li><%= answers.response %> </li>
  <% end %>

<p><a href="/question_edit" >Edit your question</a></p>

<p><a href="/" >Home</a></p>
